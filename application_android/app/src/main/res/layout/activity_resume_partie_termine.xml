<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResumePartie">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:onClick="rafraichirMatch"
        android:scaleType="fitCenter"
        android:src="@drawable/refresh_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_temps_partie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:34:53"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/tv_joueur1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="P.Gaston (34)"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_joueur2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="false"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="R.Thiem (2)" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/gl_score_manches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="10dp"
                android:rowCount="2">

                <TextView
                    android:id="@+id/tv_score_set_r1_c1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="20dp"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_score_set_r1_c2"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="20dp"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_score_set_r1_c3"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="20dp"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_score_set_r2_c1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="4dp"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_score_set_r2_c2"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="4dp"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_score_set_r2_c3"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:background="#D5000000"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF" />


            </GridLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_text_etat_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Terminé"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_joueur1_2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="P.Gaston"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/tv_joueur2_2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="false"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="R.Thiem"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_service_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:text="174"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/tv_text_points_marquée"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points marqués"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_service_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:text="185"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_points_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="150.3"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="45dp"/>

                <TextView
                    android:id="@+id/tv_text_vitesse_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitesse moyenne au service"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_points_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="150.2"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_contestation_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Contestations"
                    android:textColor="#EE0000"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/tv_contestation_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Contestations"
                    android:textColor="#EE0000"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_contestation_joueur_1_valide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="150.3"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="45dp"/>

                <TextView
                    android:id="@+id/tv_text_contestation_valide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constestations validées"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_contestation_joueur_2_valide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="150.2"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_contestation_joueur_1_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="150.3"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="45dp"/>

                <TextView
                    android:id="@+id/tv_text_contestation_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constestations refusées"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_contestation_joueur_2_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="150.2"
                    android:textSize="20dp"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text_coups_echange"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coups échangés : "
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_coups_echange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="9"
                android:textSize="25dp"
                android:textColor="#000000"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>