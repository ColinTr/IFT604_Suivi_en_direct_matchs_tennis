<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResumePartieAVenir">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:onClick="rafraichirMatch"
        android:scaleType="fitCenter"
        android:src="@drawable/refresh_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_heure_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:34:53"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_joueur1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="P.Gaston"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:id="@+id/tv_joueur2"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hapticFeedbackEnabled="false"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="R.Thiem"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_age_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:text="174"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/tv_text_age_joueurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_age_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:text="185"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_rang_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:text="174"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/tv_text_rang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rang"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_rang_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:text="185"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_pays_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:text="174"
                    android:textColor="#119802"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/tv_text_pays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pays"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_pays_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:text="185"
                    android:textColor="#119802"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_parier_joueur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parier"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:onClick="parierSurJoueur1"/>

                <Button
                    android:id="@+id/btn_parier_joueur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parier"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:onClick="parierSurJoueur2"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>