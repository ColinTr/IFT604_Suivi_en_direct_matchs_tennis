<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_toolbar_liste_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/refresh_logo"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:onClick="rafraichirListeMatch"
                android:scaleType="fitCenter"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:layout_centerHorizontal="true"
                android:onClick="afficherlisteParies"/>

            <TextView
                android:id="@+id/tv_nom_uti"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="NOM UTI"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_matchs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>