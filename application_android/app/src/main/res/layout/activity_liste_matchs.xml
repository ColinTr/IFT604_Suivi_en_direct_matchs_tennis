<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeMatchs">

    <LinearLayout
        android:id="@+id/ll_toolbar_liste_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raffraichir"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:onClick="rafraichirListeMatch"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARIES"
                android:layout_centerHorizontal="true"
                android:onClick="afficherlisteParies"/>

            <Button
                android:id="@+id/btn_nom_uti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="NOM UTI"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:onClick="deconnexionUtilisateur"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_matchs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_toolbar_liste_match"
        app:layout_constraintVertical_bias="0.0
" />

</androidx.constraintlayout.widget.ConstraintLayout>