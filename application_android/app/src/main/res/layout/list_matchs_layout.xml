<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_joueur1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="P.Gaston (1)" />

        <TextView
            android:id="@+id/tv_joueur2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="R.Thiem (25)" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_heure_match"
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="En cours"
        android:textStyle="bold"
        android:textColor="#000000"
        android:visibility="gone"/>

    <GridLayout
        android:id="@+id/gl_score_manches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_score_set_r1_c1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp" />

        <TextView
            android:id="@+id/tv_score_set_r1_c2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tv_score_set_r1_c3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tv_score_set_r2_c1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/tv_score_set_r2_c2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/tv_score_set_r2_c3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#D5000000"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF" />


    </GridLayout>
</LinearLayout>